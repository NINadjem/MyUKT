<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center|left"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_color="@color/yello"
        android:src="@drawable/logo512x512"
 />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textSize="13sp"
        android:id="@+id/username_header"
        android:text="NADJEM Nour El Imane"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/email_header"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="12.5sp"
        android:layout_height="wrap_content"
        android:text="nadjemni@gmail.com" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:textColor="@color/gray_light"
        android:id="@+id/groupe_or_specialty_header"
        android:text="3LMD Groupe 3"
        />

</LinearLayout>
