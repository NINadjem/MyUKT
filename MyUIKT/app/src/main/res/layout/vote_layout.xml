<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/blank"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="22dp"
    android:layout_margin="15dp"
    android:gravity="center"
    android:textColor="@color/blue_light"
    android:textStyle="bold"
    android:drawableLeft="@drawable/icons8heartoutline32"
    android:text="Donner Votre Avis"
    android:drawableRight="@drawable/icons8dislike32"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/why_vote"
        android:text="Pourquoi vous n'avez pas aimer la publicatiom de Nadjem Nour el Imane ?"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_border"
        android:inputType="text"
        android:padding="10dp"
        
        android:id="@+id/justification_edtx"
        android:isScrollContainer="true"
        android:textColor="@color/gray"
        android:layout_height="150dp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="@color/gray_light"
        android:id="@+id/vote_dont_justify_checkbox"
        android:text="Je ne veux pas justifier mon avis"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Envoyer"
        android:id="@+id/go_vote"
        android:textColor="@color/blue_light"
        android:drawableTop="@drawable/icons8envoyeruncommentairefilled50"
        />
    <ProgressBar
        android:layout_width="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/progress_bar_"
        android:visibility="gone"
        android:layout_height="30dp"/>
</LinearLayout>