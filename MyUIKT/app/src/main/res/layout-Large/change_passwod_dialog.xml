<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background_primary"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/yello"
        android:text="@string/change_of_password"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/icons8resaisircodepinfilled50"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/old_password"
        android:textColor="@color/blank"
        android:drawableLeft="@drawable/icons8ouvrir32"
        android:drawablePadding="20dp"
        android:textSize="20sp"
        android:textColorHint="@color/gray_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789"
        android:layout_marginBottom="5dp"
        android:hint="@string/old_password"
        android:layout_height="wrap_content"
        android:maxLength="30"/>
    <EditText
        android:layout_width="match_parent"
        android:textColor="@color/blank"
        android:layout_marginLeft="10dp"
        android:id="@+id/new_password"
        android:padding="10dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/cadnas32"
        android:drawablePadding="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/gray_light"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789"
        android:inputType="textPassword"
        android:layout_marginRight="10dp"
        android:hint="@string/new_password"
        android:layout_height="wrap_content"
        android:maxLength="30"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/change"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/blank"
        android:background="@color/green_white"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/change_password_button"
        android:layout_gravity="center"
        />
</LinearLayout>